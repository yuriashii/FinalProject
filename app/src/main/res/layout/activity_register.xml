<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_alignParentTop="true"
            android:paddingBottom="20dp"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"

                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="20dp"
                    android:textStyle="bold"
                    android:text="Bimbel Meiyin"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"/>
                <LinearLayout
                    android:id="@+id/linear_kode_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/logo"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Bimbel"
                        android:textColor="@color/black"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/linear_kode"
                    android:layout_below="@id/linear_kode_name"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/kodeWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/TextLabel">
                        <EditText
                            android:background="@drawable/editext_rounded"
                            android:id="@+id/kode_bimbel"
                            android:layout_width="match_parent"
                            android:hint="Masukkan ID Bimbel"
                            android:drawablePadding="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="18dp"
                            android:paddingTop="20dp"
                            android:inputType="textEmailAddress"
                            android:layout_height="58dp"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_label_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/linear_kode"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        android:textColor="@color/black"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/linear_name"
                    android:layout_below="@id/linear_label_name"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nameWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/TextLabel">
                        <EditText
                            android:background="@drawable/editext_rounded"
                            android:id="@+id/nama"
                            android:layout_width="match_parent"
                            android:hint="Masukkan Nama Anda"
                            android:drawablePadding="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="18dp"
                            android:paddingTop="20dp"
                            android:inputType="textEmailAddress"
                            android:layout_height="58dp"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_label_email"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_name"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/black"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/linear_email"
                    android:layout_below="@id/linear_label_email"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/emailWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:theme="@style/TextLabel">
                        <EditText
                            android:background="@drawable/editext_rounded"
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:hint="Masukkan Email"
                            android:drawablePadding="5dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textSize="18dp"
                            android:paddingTop="20dp"
                            android:inputType="textEmailAddress"
                            android:layout_height="58dp"></EditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/linear_password"
                    android:layout_below="@id/linear_email"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Password"></TextView>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/passwordWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@+id/linear_password"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:background="@drawable/editext_rounded"
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:hint="Masukkan Password"
                        android:textSize="18dp"
                        android:drawableRight="@drawable/ic_baseline_visibility_off_24"

                        android:layout_marginTop="10dp"
                        android:drawablePadding="5dp"
                        android:paddingTop="20dp"
                        android:textColor="@color/black"
                        android:inputType="textPassword">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/linear_re_pasword"
                    android:layout_below="@id/passwordWrapper"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Ulangi Password"></TextView>
                </LinearLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/repasswordWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_below="@+id/linear_re_pasword"
                    android:theme="@style/TextLabel">

                    <EditText
                        android:background="@drawable/editext_rounded"
                        android:id="@+id/repassword"
                        android:layout_width="match_parent"
                        android:layout_height="58dp"
                        android:hint="Masukkan Ulang Password"
                        android:textSize="18dp"
                        android:drawableRight="@drawable/ic_baseline_visibility_off_24"

                        android:layout_marginTop="10dp"
                        android:drawablePadding="5dp"
                        android:paddingTop="20dp"
                        android:textColor="@color/black"
                        android:inputType="textPassword">

                    </EditText>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/register"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@+id/repasswordWrapper"
                    android:layout_marginTop="10dp"

                    android:background="@drawable/button_rounded"
                    android:text="Daftar"
                    android:textColor="@color/white"
                    android:textSize="24dp">

                </Button>

                <TextView
                    android:id="@+id/text_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/register"
                    android:layout_marginTop="40dp"
                    android:gravity="center_horizontal"
                    android:text="Sudah punya akun?"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_login"
                    android:gravity="center_horizontal"
                    android:text="Login"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold">

                </TextView>



            </RelativeLayout>



        </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>